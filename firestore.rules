rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ─────────────────────────────────────────────────────────────────────────────
    //  Helper Functions
    // ─────────────────────────────────────────────────────────────────────────────
    function _userRoles() {
      return request.auth != null
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles
        : null;
    }

    function _isAdmin() {
      let roles = _userRoles();
      return request.auth != null
        && roles != null
        && roles.hasAny(['admin', 'topheroesAdmin']);
    }

    // Reusable: allow updates that ONLY touch a specific whitelist of fields
    function _isOnlyStatsUpdate(allowedKeys) {
      return request.resource.data
        .diff(resource.data)
        .affectedKeys()
        .hasOnly(allowedKeys);
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  Users Collection
    // ─────────────────────────────────────────────────────────────────────────────
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow initial unauth'd create if all required fields present,
      // or normal auth'd self-create.
      allow create: if (request.auth != null && request.auth.uid == userId) ||
                    (request.auth == null && request.resource.data.keys().hasAll([
                      'firstName', 'lastName', 'userName', 'emailAddress', 'phoneNumber', 'dateOfBirth'
                    ]));

      match /dailyChallenges/{document=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  Castle Data Collection
    // ─────────────────────────────────────────────────────────────────────────────
    match /castleData/{document=**} {
      allow read: if true;
      allow write: if _isAdmin();
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  TopHeroes: Public Published Guilds (FIXED PATH + viewCount updates allowed)
    // ─────────────────────────────────────────────────────────────────────────────
    // This is the ACTUAL path your app reads/writes:
    // /topheroes/guilds-v2/published/{publishId}
    match /topheroes/guilds-v2/published/{publishId} {
      allow read: if true;

      // Allow anyone (including unauth) to update ONLY viewCount
      // IMPORTANT: client must ONLY update viewCount in this request.
      allow update: if _isOnlyStatsUpdate(['viewCount']);

      // Admins can create/overwrite/delete
      allow create, delete: if _isAdmin();
    }

    // If you ever add subcollections under published docs
    match /topheroes/guilds-v2/published/{publishId}/{subpath=**} {
      allow read: if true;
      allow write: if _isAdmin();
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  TopHeroes: Queues, Comments, Replies
    // ─────────────────────────────────────────────────────────────────────────────
    match /topheroes/general/queues/{queueId} {

      function _isCreatorForCreate() {
        return request.auth != null &&
               request.resource.data.createdByUserId == request.auth.uid;
      }

      function _isCreator() {
        return request.auth != null &&
               resource.data.createdByUserId == request.auth.uid;
      }

      function _isQueueStatsUpdate() {
        return _isOnlyStatsUpdate([
          'upvotes',
          'downvotes',
          'shares',
          'comments',
          'commentCount',
          'views'
        ]);
      }

      // Anyone can read queues
      allow read: if true;

      // Create must be by admin OR an auth'd user setting themselves as creator
      allow create: if _isAdmin() || _isCreatorForCreate();

      // Update:
      // - Admins or the creator can update anything
      // - Anyone (including unauth) can update ONLY stats fields
      allow update: if _isAdmin() || _isCreator() || _isQueueStatsUpdate();

      // Delete: admins or creator
      allow delete: if _isAdmin() || _isCreator();

      // Comments collection
      match /comments/{commentId} {

        function _isCommentStatsUpdate() {
          return _isOnlyStatsUpdate(['upvotes', 'downvotes', 'reports', 'replyCount']);
        }

        // Anyone can read
        allow read: if true;

        // Anyone (even unauthenticated) can add comments
        allow create: if true;

        // Anyone can update stat fields only (including adding reports)
        allow update: if _isCommentStatsUpdate();

        // Only admins can delete comments
        allow delete: if _isAdmin();

        // Replies subcollection
        match /replies/{replyId} {

          function _isReplyStatsUpdate() {
            return _isOnlyStatsUpdate(['upvotes', 'downvotes', 'reports']);
          }

          allow read: if true;
          allow create: if true;              // Anyone can add replies
          allow update: if _isReplyStatsUpdate(); // Anyone can update stats
          allow delete: if _isAdmin();        // Admins can delete
        }
      }
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  Generic TopHeroes fallback (everything else under /topheroes)
    // ─────────────────────────────────────────────────────────────────────────────
    match /topheroes/{document=**} {
      // Public read for everything under /topheroes
      allow read: if true;

      // Locked down writes by default
      allow write: if _isAdmin();
    }

    // ─────────────────────────────────────────────────────────────────────────────
    //  Other Collections
    // ─────────────────────────────────────────────────────────────────────────────
    match /translations/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    match /foodDatabase/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /dailyChallenges/{document} {
      allow read: if true;
      allow write: if false;

      match /stats/{document=**} {
        allow read: if true;
        allow write: if false;
      }

      match /solutions/{document=**} {
        allow read, write: if false;
      }
    }

    match /destiny/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Catch-all deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}